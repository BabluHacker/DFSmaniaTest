<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mehedi.dfsmania.Tupleinput">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Source Node"
        android:id="@+id/tiltle1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Node"
        android:id="@+id/title2"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textnode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/digit1"
        android:layout_below="@+id/tiltle1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/digit2"
        android:layout_below="@+id/tiltle1"
        android:layout_toRightOf="@+id/digit1"
        android:layout_toEndOf="@+id/digit1"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/digit3"
        android:layout_below="@+id/tiltle1"
        android:layout_toRightOf="@+id/digit2"
        android:layout_toEndOf="@+id/digit2"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/digit4"
        android:layout_below="@+id/digit1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/digit5"
        android:layout_below="@+id/digit2"
        android:layout_toRightOf="@+id/digit1"
        android:layout_toEndOf="@+id/digit1"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/digit6"
        android:layout_below="@+id/digit2"
        android:layout_toRightOf="@+id/digit2"
        android:layout_toEndOf="@+id/digit2"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/digit7"
        android:layout_below="@+id/digit4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/digit8"
        android:layout_below="@+id/digit4"
        android:layout_toRightOf="@+id/digit7"
        android:layout_toEndOf="@+id/digit7"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/digit9"
        android:layout_below="@+id/digit6"
        android:layout_toRightOf="@+id/digit8"
        android:layout_toEndOf="@+id/digit8"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/digit0"
        android:layout_below="@+id/digit7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/end3"
        android:layout_below="@+id/title2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/end2"
        android:layout_below="@+id/title2"
        android:layout_toLeftOf="@+id/end3"
        android:layout_toStartOf="@+id/end3"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/end1"
        android:layout_below="@+id/title2"
        android:layout_toLeftOf="@+id/end2"
        android:layout_toStartOf="@+id/end2"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/end6"
        android:layout_below="@+id/end3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/end5"
        android:layout_below="@+id/end2"
        android:layout_toLeftOf="@+id/end6"
        android:layout_toStartOf="@+id/end6"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/end4"
        android:layout_below="@+id/end2"
        android:layout_toLeftOf="@+id/end2"
        android:layout_toStartOf="@+id/end2"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/end9"
        android:layout_above="@+id/digit0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/end8"
        android:layout_above="@+id/digit0"
        android:layout_toLeftOf="@+id/end9"
        android:layout_toStartOf="@+id/end9"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/end7"
        android:layout_above="@+id/digit0"
        android:layout_toLeftOf="@+id/end8"
        android:layout_toStartOf="@+id/end8"
        android:onClick="onClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/end0"
        android:layout_alignTop="@+id/digit0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/buttonDone"
        android:onClick="onClickDone"
        android:layout_alignTop="@+id/end0"
        android:layout_toLeftOf="@+id/end0"
        android:layout_toStartOf="@+id/end0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Source --->  End"
        android:id="@+id/textnode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonDone"
        android:textAlignment="center"
        android:textColor="#30b23f"
        android:shadowColor="#a0c831" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/button_back"
        android:layout_alignTop="@+id/digit0"
        android:layout_toRightOf="@+id/digit0"
        android:layout_toEndOf="@+id/digit0"
        android:onClick="onClickBack" />

</RelativeLayout>
